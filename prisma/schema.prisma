// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id   String @id
    role Role   @default(USER)
}

model Point {
    id          String   @id @default(cuid())
    images      String[]
    name        String
    description String
    latitude    Float
    longitude   Float
    linkToVideo String
}

enum Role {
    ADMIN
    USER
}
